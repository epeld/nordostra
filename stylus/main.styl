midgreen = #7c7f70
lightgreen = #bdbdb2
darkgreen = #514f50

@font-face
    font-family:"TopSecret";
    src: url("/fonts/topsecret.ttf")

link()
    text-decoration none !important
    font-family "TopSecret"
    font-size 1.2em

body
    font-family Courier
    margin 0
    background-color lightgreen

h2
    text-transform uppercase
    margin-bottom 20px

nav-item()
    display block
    a
        line-height 20px
        padding 10px 15px
        display inline-block
        text-decoration none !important
        color black
    a:hover
        background-color darkgreen
        color lightgreen

clear()
    display block
    content " "
    clear both

.nav-item
    float left
    nav-item()

.nav-item--right
    float:right
    nav-item()

.big
    font-size larger


.nav
    margin 0
    background-color midgreen
    &::after,&::before
        clear()

.header
    //color white
    font-family Palatino
    background-color #e0d0ff
    background-image url("/images/camo.gif")
    padding 35px 0 75px 40px

h1
    font-size 40px


h2
    font-weight 400

.sub
    font-size 25px
    font-weight normal
    font-family "Courier"
    //color #e0d0ff

.info
    clear()

.content
    background-color lightgreen
    margin-bottom 40px

.content
    -webkit-padding-start 0
    padding 15px 40px

.logo
    max-width: 92px
    margin-right 15px
    float left

.image-container
    max-width 25%
    img
        max-width 100%
        display block
    float left

.frame
    padding 0 5px

.image-text
    text-align center
    font-style italic
    clear both

.images
    font-family Georgia
    padding 35px 35px
    margin 0 auto
    background midgreen
    &::after
        clear()

.half-rule
    display none
    width 100px
    margin 40px auto
    border-top 1px solid darkgreen

.logo-separator
    padding 45px 0
    background-image url("/images/camo.gif")

.question
    font-style italic
    margin-bottom 5px

.answer
    &::before
        content " - "

.link, .sign-up
    link()
.sign-up
    color red
    &:hover
        color black
.link
    color black
    &:hover
        color darkgreen

.list
    list-style none
    li::before
        content " * "
.faq-list
    list-style-type upper-alpha
.faq
    margin-bottom 25px
