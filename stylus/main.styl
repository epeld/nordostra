midgreen = #7c7f70
lightgreen = #cdcdc2
darkgreen = #052

maxwidth = 1000px

@font-face
    font-family:"TopSecret";
    src: url("/fonts/topsecret.ttf")

link()
    color navyblue
    font-size 1.2em

.secret
    text-decoration none !important
    font-family "TopSecret"
    font-size 1.6em
    display inline-block
    color darkred
    text-transform uppercase
    transform rotate(-30deg)
    transform-origin 0 0
    float right
    margin 25px 15px 0 5px
    &:hover
        color red

body
    font-family Helvetica
    font-weight 300
    margin 0
    background-color lightgreen

p
    line-height 1.3em
        

h2
    text-transform uppercase
    margin-bottom 20px

.intro
    max-width 500px
    margin 60px auto 0 auto
    
nav-item()
    display block
    a
        font-weight 400
        line-height 20px
        padding 10px 15px
        display inline-block
        text-decoration none !important
        color black
    a:hover
        background-color darkgreen
        color lightgreen

clear()
    display block
    content " "
    clear both

.nav-item
    float left
    nav-item()

.nav-item--right
    float:right
    nav-item()

.big
    font-size larger

.container
    max-width maxwidth
    margin 0 auto

.nav
    padding 0 0
    margin 0 auto
    &::after,&::before
        clear()

.header
    text-align center
    color white
    background-color darkgreen
    padding 35px 0 75px 0
    background-image url("/images/camo.gif")

h1
    font-size 50px


h2
    font-weight 400
h2,h3
    color darkgreen

.sub
    font-size 25px
    font-weight normal
    font-family "Courier"
    //color #e0d0ff

.info
    clear()

.content
    background-color lightgreen
    margin-bottom 40px


.content
    -webkit-padding-start 0
    padding 15px 0

.logo
    vertical-align middle

.image-container
    max-width 25%
    img
        max-width 100%
        display block
    float left

.frame
    padding 0 5px

.image-text
    text-align center
    font-style italic
    clear both

.images
    font-family Georgia
    padding 35px 35px
    margin 0 auto
    background-image url("/images/camo.gif")
    color white
    &::after
        clear()

.half-rule
    display none
    width 100px
    margin 40px auto
    border-top 1px solid darkgreen

.logo-separator
    padding 45px 0
    background-image url("/images/camo.gif")

.question
    font-style italic
    margin-bottom 5px

.answer
    &::before
        content " - "

.link, .sign-up
    link()
.sign-up
    color red
    &:hover
        color black
.link
    color black
    &:hover
        color darkgreen

.list
    list-style none
    li::before
        content " * "
.faq-list
    list-style-type upper-alpha
.faq
    margin-bottom 25px
